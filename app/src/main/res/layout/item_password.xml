<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_item_password"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/item_password"
            android:layout_centerVertical="true"
            android:padding="8dp"

            />
        
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@id/ib_mas_opciones"
            android:padding="10dp"
            android:layout_toEndOf="@id/img_item_password"
            android:layout_marginStart="2dp"
            >

            <TextView
                android:id="@+id/item_titulo"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/Item_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/item_cuenta"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/Item_cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_nombre_usuario"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/Item_nombre_usuario"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_password"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/Item_password"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_sitio_web"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/Item_sitio_web"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_nota"
                android:fontFamily="@font/opensans_regular"
                android:visibility="gone"
                android:text="@string/Item_nota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_mas_opciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/icono_mas_opciones"

            />
            

    </RelativeLayout>

</androidx.cardview.widget.CardView>